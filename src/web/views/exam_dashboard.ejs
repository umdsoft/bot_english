<!doctype html>
<html lang="uz" class="h-full bg-gray-50">
<head>
  <meta charset="utf-8">
  <title>Oraliq testlar</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full">
<div class="max-w-5xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold">Oraliq testlar</h1>
    <div class="text-sm text-gray-600">ðŸ‘¤ <%= student.name || '' %> Â· <a href="/exam/logout" class="underline">Chiqish</a></div>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <div class="rounded-xl border bg-white p-5">
      <h2 class="font-semibold mb-3">Mavjud testlar</h2>
      <% if (!tests.length) { %>
        <p class="text-sm text-gray-500">Hozircha test yoâ€˜q.</p>
      <% } %>
      <div class="space-y-3">
        <% tests.forEach(t => { %>
          <form method="post" action="/exam/start/<%= t.id %>" class="flex items-center justify-between rounded-lg border px-3 py-2">
            <div>
              <div class="font-medium"><%= t.name %></div>
              <div class="text-xs text-gray-500">Level: <%= t.level || '-' %></div>
            </div>
            <button class="rounded bg-indigo-600 text-white px-3 py-1.5">Boshlash</button>
          </form>
        <% }) %>
      </div>
    </div>

    <div class="rounded-xl border bg-white p-5">
      <h2 class="font-semibold mb-3">Sizning urinishlaringiz</h2>
      <% if (!attempts.length) { %><p class="text-sm text-gray-500">Hali urinish yoâ€˜q.</p><% } %>
      <div class="divide-y">
        <% attempts.forEach(a => { %>
          <div class="py-2 text-sm flex items-center justify-between">
            <div>
              <div class="font-medium"><%= a.test_name %></div>
              <div class="text-gray-500"><%= a.status %> Â· <%= a.percent || 0 %>%</div>
            </div>
            <a href="<%= a.status==='completed' ? '/exam/result/'+a.id : '/exam/q/'+a.id %>" class="underline">
              <%= a.status==='completed' ? 'Natija' : 'Davom ettirish' %>
            </a>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
