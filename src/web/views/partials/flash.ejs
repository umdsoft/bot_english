<% if (msg && msg.length) { %>
  <div class="mb-4 rounded-lg border border-emerald-200 bg-emerald-50 text-emerald-800 px-4 py-3">✅ <%= msg %></div>
<% } %>
<% if (error && error.length) { %>
  <div class="mb-4 rounded-lg border border-rose-200 bg-rose-50 text-rose-800 px-4 py-3">❌ <%= error %></div>
<% } %>
